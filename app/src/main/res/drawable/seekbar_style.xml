<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="10dip" />
            <gradient android:startColor="#9F9EA3"
                android:centerColor="#9F9EA3" android:endColor="#9F9EA3"
                android:centerY="0.45" android:angle="270" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="10dip" />
                <gradient android:startColor="#01B0DA"
                    android:centerColor="#01B0DA" android:endColor="#01B0DA"
                    android:centerY="0.45" android:angle="270" />
            </shape>
        </clip>
    </item>
</layer-list>